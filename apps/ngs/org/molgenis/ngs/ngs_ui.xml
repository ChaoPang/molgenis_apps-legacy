<molgenis name="molgenis_apps" label="Next Generation Sequencing">
	<plugin name="molgenis_header" type="org.molgenis.ngs.ui.NgsHeader" />
	<menu name="mainmenu" position="left">
		<menu name="NGS">
			<form name="Investigations" label="Projects, Samples" entity="Investigation">
				<menu name="InvestigationsMenu">
					<form name="Samples" entity="NgsSample" />
					<form name="Trios" entity="Trio" />
				</menu>
			</form>
			<form name="Flowcells" entity="Flowcell" label="Flowcell, Lanes"
				hide_fields="Investigation,ontologyReference">
				<form name="Lanes" entity="LibraryLane" hide_fields="Investigation,ontologyReference" />
			</form>
			<form name="Worksheet" label="Analysis Worksheet" entity="Worksheet"
				commands="org.molgenis.compute.ui.WorksheetBatchCommand">
				<plugin name="Button" type="org.molgenis.compute.ui.StartNgs" />
			</form>
			<!-- form name="WorksheetLaneLevel" label="Lane level worksheet" entity="WorksheetLaneLevel" 
				commands="org.molgenis.compute.ui.WorksheetBatchCommand"> <plugin name="ButtonLaneLevel" 
				type="org.molgenis.compute.ui.StartNgs" /> </form -->
			<plugin name="ImportWorksheet" label="Upload worksheet"
				type="org.molgenis.ngs.ui.ImportWorksheet" />
		</menu>
		<include file="apps/compute/org/molgenis/compute/ngs_lims_ui.xml" />
	</menu>
</molgenis>