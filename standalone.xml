</target>
  <target name="compile" depends="unjar" description="compile the Standalone source " >
  	<copy todir="${dist}">
  	    <fileset dir="${molgenis_dist}/">
  	        <include name="**/*.jar"/>
  	    </fileset>
  	</copy>
  	<javac srcdir="${src}/apps;${src}/java;${src}/webserver;generated/" destdir="${build}" classpath="${build}/;${dist}/molgenis-3.3.0.jar" />
  </target>

  <target name="package" depends="compile" description="Package the distribution" >
    <!-- Create the distribution directory -->
    <mkdir dir="${dist}"/>
	<copy todir="${build}">
    <fileset dir="${src}/apps">
        <include name="**/*.ftl"/>
    </fileset>
	</copy>
  	<copy todir="${build}">
  	    <fileset dir="${src}/java">
  	        <include name="**/*.ftl"/>
  	    </fileset>
  	</copy>
  	<copy todir="${build}">
  	    <fileset dir="${src}/webserver">
  	        <include name="**/mime.*"/>
  	    </fileset>
  	</copy>
    <!-- Put everything in ${build} into the MyProject-${DSTAMP}.jar file -->
    <jar jarfile="${dist}/gcc.jar" basedir="${build}">
     	 <manifest>
     	    <attribute name="Built-By" value="${myname}"/>
     	    <attribute name="Main-Class" value="RunStandalone"/>
     	 	<attribute name="Class-Path" value="molgenis-3.3.0.jar"/>
     	  </manifest>
    </jar>
  	<copy todir="${dist}/WebContent">
  	    <fileset dir="WebContent">
  	    	<exclude name="WebContent/doc/*"/>
  	    	<exclude name="WebContent/VAADIN/*"/>
  	        <include name="**/*.*"/>
  	    </fileset>
  	</copy>
  	<copy todir="${dist}/hsqldb">
  	    <fileset dir="hsqldb">
  	    	<exclude name="**/.svn/*"/>
  	        <include name="**/*.*"/>
  	    </fileset>
  	</copy>
  	<copy todir="${dist}/">
  	    <fileset dir="handwritten/standalone">
  	        <include name="**/*.*"/>
  	    </fileset>
  	</copy>
  </target>

  <target name="clean"
        description="clean up" >
    <!-- Delete the ${build} and ${dist} directory trees -->
    <delete dir="${build}"/>
    <delete dir="${dist}"/>
  </target>
</project>
