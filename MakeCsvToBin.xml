<?xml version="1.0" encoding="UTF-8"?>
<project name="MakeCsvToBin" default="package" basedir=".">
    <description>
        ANT file to build the CsvToBin application
    </description>
  <!-- set global properties for this build -->
  <property name="src" 				location="handwritten"       />
  <property name="build" 			location="build"     />
  <property name="dist"  			location="dist"      />
  <property name="libraries" 		location="lib"       />
  <property name="myname" 			value="Danny Arends" />
  <property name="version"          value="3.3.0"        />
  <property environment="env"/>
  
	<target name="init">
    <!-- Create the time stamp -->
    <tstamp/>
    <echo message="Number of Processors = ${env.NUMBER_OF_PROCESSORS}"/>
    <echo message="ANT_HOME is set to = ${env.ANT_HOME}"/>

    <!-- Create the build directory structure used by compile -->
    <mkdir dir="${build}"/>
  </target>

  <target name="unjar" depends="init" description="compile the Standalone source " >
    <!-- Compile the java code from ${src} into ${build} -->
	<unjar src="lib/molgenis-3.3.0.jar" dest="${build}"/>
  	<unjar src="lib/jaxrpc.jar" dest="${build}"/>
	<unjar src="lib/keggapi.jar" dest="${build}"/>
	<unjar src="lib/mindterm.jar" dest="${build}"/>
	<unjar src="lib/mydas-1.6.0.jar" dest="${build}"/>
  	<unjar src="lib/ontoCAT_v0.8.jar" dest="${build}"/>
</target>
  <target name="compile" depends="unjar" description="compile the Standalone source " >				
  	<javac srcdir="${src};generated/" destdir="${build}" classpath="${build}/" />
  </target>

  <target name="package" depends="compile" description="Package the distribution" >
    <!-- Create the distribution directory -->
    <mkdir dir="${dist}"/>
    <!-- Put everything in ${build} into the MyProject-${DSTAMP}.jar file -->
    <jar jarfile="${dist}/CsvToBin.jar" basedir="${build}">
     	 <manifest>
     	    <attribute name="Built-By" value="${myname}"/>
     	    <attribute name="Main-Class" value="matrix.general.CsvToBin"/>
     	  </manifest>
    	</jar>
  </target>

  <target name="clean"
        description="clean up" >
    <!-- Delete the ${build} and ${dist} directory trees -->
    <delete dir="${build}"/>
    <delete dir="${dist}"/>
  </target>
</project>
