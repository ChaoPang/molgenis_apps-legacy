<molgenis name="ngs" label="Next Generation Sequencing Workbench">
	<description>Simple workbench to work with Illumina NGS data. Samples
		are delivered as part of Investigations, optionally registering the
		contacts for this investigation. Within an NGS facility these samples
		will be processed into libraries. These libraries will subsequently be
		measured on the Illumina flowcell, each library into one lane. Along
		the way a lot of 'Features' will be measured that result in
		ObservedValues that need to be attached to samples, libraries, or
		lanes respectively. This user interface provides a minimal way to do
		this.</description>
	<plugin name="molgenis_header" type="plugins.header.MolgenisHeader" />
	<menu name="main" position="left">
		<form name="Investigations" entity="Investigation" hide_fields="id,accession">
			<menu name="InvestigationMenu" label="Projects">
				<form name="Samples" entity="Sample" hide_fields="id,ontologyReference">
					<form name="ValuesPerSample" entity="ObservedValue"
						hide_fields="ontologyReference,id,relation" />
				</form>
			</menu>
		</form>
		<form name="Libraries" entity="Library" hide_fields="id,ontologyReference">
			<form name="ValuesPerLibrary" entity="ObservedValue"
				hide_fields="ontologyReference,id,relation" />
		</form>
		<form name="Flowcells" entity="Flowcell" hide_fields="id,ontologyReference">
			<form name="Lanes" entity="Lane" hide_fields="id,ontologyReference">
				<form name="ValuesPerLane" entity="ObservedValue"
					hide_fields="ontologyReference,id,relation" />
			</form>
		</form>
		<form name="Contacts" entity="Person" compact_view="FirstName,MidInitials,LastName" hide_fields="id"/>
		<menu name="protocol" position="left" label="Protocol menu">
			<form name="Measurements" entity="Measurement" hide_fields="id,ontologyReference"/>
			<form name="Protocols" entity="Protocol" hide_fields="id,investigation"/>
			<plugin name="ApplyProtocol" label="Apply protocol" type="plugins.protocol.ApplyProtocolPlugin" />
			<plugin name="ListPlugin" label="Matrix viewer" type="plugins.listplugin.ListPlugin" />
		</menu>
		<plugin name="ExcelImport" label="Excel import" type="plugins.genericwizard.GenericWizard" />
	</menu>
</molgenis>