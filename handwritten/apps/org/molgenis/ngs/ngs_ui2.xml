<?xml version="1.0" encoding="UTF-8"?>
<!-- DOCTYPE molgenis PUBLIC "MOLGENIS 1.0" "http://molgenis.sourceforge.net/dtd/molgenis_v_1_0.dtd" -->

<molgenis name="ngs" label="Next-Gen Sequencing">

	<plugin name="NgsHeader" type="plugins.header.NgsHeader" />

	<menu name="mainmenu" position="left" startswith="WelcomeScreen">

		<plugin name="NGSWelcomeScreen" type="plugins.welcome.NGSWelcomeScreenPlugin"
			label="Welcome" />

		<menu name="projectoptions" position="left" label="Project">
			<plugin name="CreateProject" type="plugins.ngs.project.CreateNewProject"
				label="Create New Project" />
				
			<form name="AddInstitute" entity="Institute">	
				<form name="Client" entity="NgsPerson" hide_fields="labworker"/>
			</form>
				
			<form name="CreateNewProject" entity="Investigation">
				<form name="Projects" entity="Project" >
					<form name="Sample" entity="NgsSample" />
				</form>
			</form>
			

			<plugin name="ProjectOverview" type="plugins.ngs.project.ProjectOverview"
				label="Project Overview" />

		</menu> <!-- end project submenu -->
		<menu name="workflowoptions" position="left" label="Workflow">

			<form name="Workflows" entity="Workflow">
				<form name="wkflowelements" entity="WorkflowElement" />
			</form>

			<plugin name="SampleViewer" type="plugins.ngs.samplerviewer.SampleViewer"
				label="Sample Viewer" />

			<plugin name="WorkFlow" type="plugins.ngs.workflow.Workflow"
				label="Workflow" />

			<form name="SamplesForm" entity="NgsSample" label="Samples"/>

		</menu> <!-- end project submenu -->
		<plugin name="GenericWizard" type="plugins.genericwizard.GenericWizard"
			label="ImportWizard" />
			
		<menu name="admin" position="left" label="Administration">
		

		<form name="Investigations" entity="Investigation">
			<menu name="InvestigationMenu">
				<form name="Features" entity="ObservableFeature" />
				<form name="Samples" entity="NgsSample">
					<form name="ValuesPerSample" entity="ObservedValue" hide_fields="ontologyReference,id,relation"/>
				</form>
				<form name="Libraries" entity="Library" />
				<form name="Flowcells" entity="Flowcell" />
				<form name="Lanes" entity="Lane">
					<form name="ValuesPerLane" entity="ObservedValue"  hide_fields="OntologyReference,Id,Relation"/>
				</form>
				<form name="AllObservedValues" entity="ObservedValue" />
			</menu>
		</form>
		<form name="ProtocolandDocuments" entity="Protocol">
			<menu name="ProtocolDocs">
				<form name="ProtocolDocuments" entity="ProtocolDocument" />
			</menu>
		</form>
		<form name="ProtocolandFeatures" entity="Protocol" >
		<form name="FeaturesByProtocol" entity="Measurement"></form>
		</form>
		
		<form name="LabWorkers" entity="NgsPerson"/>
	</menu>
	</menu>

</molgenis>
