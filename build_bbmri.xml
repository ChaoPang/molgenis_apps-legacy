<!-- compute means generating as described, than compile the apps we depend on -->
<project>
	<property name="app_properties" value="apps/bbmri/org/molgenis/biobank/bbmri.molgenis.properties" />
	<path id="app.class.path">
		<pathelement location="apps/bbmri" />
		<pathelement location="modules/auth" />
		<pathelement location="modules/pheno" />
		<pathelement location="modules/file" />
		<pathelement location="modules/datamodel" />
		<pathelement location="modules/settings" />
		<pathelement location="modules/import"/>
	</path>
	<property name="app_src" refid="app.class.path"/>

	<target name="clean">
		<ant antfile="build_common.xml" target="clean" inheritAll="true">
		</ant>
	</target>

	<target name="generate">
		<ant antfile="build_common.xml" target="generate" inheritAll="true"/>
		<antcall target="compile" />
	</target>

	<target name="compile">
		<ant antfile="build_common.xml" target="compile" inheritAll="true"/>
	</target>

	<target name="clean_generate" depends="clean,generate,compile"/>

	<target name="test" depends="clean,generate,compile">
		<ant antfile="build_common.xml" target="test" inheritAll="true"/>
	</target>

</project>
